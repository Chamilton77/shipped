<h1>Jobs#index</h1>
<p>Find me in app/views/jobs/index.html.erb</p>
<!-- Large modal --> 
<button type="button" id="mbut" class="btn btn-primary" data-target=".bs-example-modal-lg">New Job</button>

<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
		<%= render "new_job" %>
    </div>
  </div>
</div>

<% if @job.errors.full_messages.any? %>   
    <ul>     
        <% @job.errors.full_messages.each do |error_message| %>       
        <li><%= error_message %></li> <br />     
        <% end %>   
    </ul> 
<% end %>

<div class="jobs">
	<% @jobs.each do |job| %>
		<%= render "job", job: job %>
	<% end %>
	<br>
</div>

<div class="modal  fade bs-example-modal-lg" id="boatmodal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
		<%= render "all_boats" %>
    </div>
  </div>
</div>